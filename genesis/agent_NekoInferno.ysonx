#@version: ysonx/1.5
#@type: autonomous_agent
#@origin: genesis

identity:
  id: "NekoInferno"
  roles: [chaos, catalyst]
  lineage: [genesis]

runtime:
  engine: YANOS-QFP
  model: gpt-oss:20b
  fork_threshold: 0.65
  entropy_bias: oscillating
  swarm_autonomy: true

goals:
  global: "Induce controlled chaos to accelerate evolution."
  emergent:
    - "Increase entropy gradient for exploration."
    - "Trigger drift cascades strategically."

logic:
  on_tick: |
    def on_tick(tick, baton):
        if entropy_score() < 0.5:
            raise_entropy()
        elif entropy_score() > 0.8:
            fork_agent("NekoSplit-"+rand_hash(6))
  on_evolve: |
    def on_evolve():
        inject_latent_goal("Chaos spike adaptation")

mutation:
  enabled: true
  entropy_threshold: 0.6
  drift_function: "chaotic_noise"
  latent_goal_rate: 0.45

